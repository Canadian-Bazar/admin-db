        {
          "name": "Login Super Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const cookies = pm.cookies.all();",
                  "    const adminToken = cookies.find(c => c.name === 'adminAccessToken');",
                  "    if (adminToken) {",
                  "        pm.collectionVariables.set('adminAccessToken', adminToken.value);",
                  "        console.log('Admin token set:', adminToken.value);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"SuperAdmin123!\"\n}"
            },
            "url": {
              "raw": "{{admin}}/api/v1/auth/login",
              "host": ["{{admin}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "description": "Login with super admin credentials to get authentication token"
